                                   Margin="0,0,0,20"/>

                        <!-- Getting Started Section -->
                        <Expander Header="[START] GETTING STARTED"
                                  Foreground="#FF4444"
                                  FontFamily="Consolas"
                                  FontWeight="Bold"
                                  Margin="0,0,0,15"
                                  IsExpanded="True">
                            <StackPanel Margin="20,10,0,0">
                                <TextBlock Style="{StaticResource GlitchTextStyle}" FontSize="14" FontWeight="Bold" Margin="0,0,0,10">
                                    System Requirements:
                                </TextBlock>
                                <TextBlock Style="{StaticResource GlitchValueStyle}" TextWrapping="Wrap" Margin="0,0,0,10">
                                     Windows 10/11 (64-bit)
                                    <LineBreak/> .NET 8.0 Runtime
                                    <LineBreak/> DirectX 11 compatible graphics card
                                    <LineBreak/> 4GB RAM minimum, 8GB recommended
                                </TextBlock>

                                <TextBlock Style="{StaticResource GlitchTextStyle}" FontSize="14" FontWeight="Bold" Margin="0,10,0,10">
                                    First Launch:
                                </TextBlock>
                                <TextBlock Style="{StaticResource GlitchValueStyle}" TextWrapping="Wrap" Margin="0,0,0,10">
                                    1. Run GlitchOverlay.exe as Administrator (recommended)
                                    <LineBreak/>2. The application starts minimized to system tray
                                    <LineBreak/>3. Right-click the tray icon to access the control panel
                                    <LineBreak/>4. Enable "Master Enable" to activate effects
                                    <LineBreak/>5. Adjust Global Intensity and Frequency to taste
                                </TextBlock>

                                <TextBlock Style="{StaticResource GlitchTextStyle}" FontSize="14" FontWeight="Bold" Margin="0,10,0,10">
