<Window x:Class="GlitchOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glitch Overlay Control Panel"
        Height="600" Width="800"
        Background="#1A1A1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Icon="favicon.ico">

    <Window.Resources>
        <!-- Red-themed styles for better visibility -->
        <Style x:Key="GlitchTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="GlitchValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF8888"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style x:Key="GlitchHighlightStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFAAAA"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="GlitchSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="Background" Value="#2A2A2A"/>
        </Style>

        <Style x:Key="GlitchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <Style x:Key="GlitchCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="GlitchComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style x:Key="GlitchTabStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="GLITCH OVERLAY" 
                       Style="{StaticResource GlitchTextStyle}"
                       FontSize="24" 
                       FontWeight="Bold"/>
            <TextBlock Text=" v1.0" 
                       Style="{StaticResource GlitchTextStyle}"
                       FontSize="14" 
                       VerticalAlignment="Bottom"
                       Margin="10,0,0,5"/>
        </StackPanel>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" 
                    Background="#2A2A2A" 
                    BorderBrush="#404040">
            
            <!-- Effects Tab -->
            <TabItem Header="EFFECTS"
                     Style="{StaticResource GlitchTabStyle}">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        
                        <!-- Global Controls -->
                        <GroupBox Header="GLOBAL SETTINGS"
                                  Foreground="#FF4444"
                                  BorderBrush="#FF4444"
                                  Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Master Enable:" 
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <CheckBox Grid.Row="0" Grid.Column="1"
                                          x:Name="MasterEnableCheckBox"
                                          Style="{StaticResource GlitchCheckBoxStyle}"
                                          ToolTip="Enable/disable all visual effects globally"
                                          Margin="10,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Global Intensity:" 
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="1" Grid.Column="1"
                                        x:Name="GlobalIntensitySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.5"
                                        ToolTip="Controls the overall strength of all effects (0.0 = off, 1.0 = maximum)"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" 
                                           x:Name="GlobalIntensityValue"
                                           Text="0.5" 
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Global Frequency:" 
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="2" Grid.Column="1"
                                        x:Name="GlobalFrequencySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.3"
                                        ToolTip="Controls how often effects trigger (0.0 = never, 1.0 = constantly)"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" 
                                           x:Name="GlobalFrequencyValue"
                                           Text="0.3" 
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Individual Effect Controls -->
                        <TextBlock Text="INDIVIDUAL EFFECTS"
                                   Style="{StaticResource GlitchTextStyle}"
                                   FontSize="16"
                                   Margin="0,0,0,10"/>

                        <!-- Pixel Shift Effect -->
                        <GroupBox Header="PIXEL SHIFT"
                                  Foreground="#00FF41"
                                  BorderBrush="#404040"
                                  Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                          x:Name="PixelShiftEnableCheckBox"
                                          Content="Enable Pixel Shift"
                                          Foreground="#00FF41"
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Intensity:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="1" Grid.Column="1"
                                        x:Name="PixelShiftIntensitySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.4"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           x:Name="PixelShiftIntensityValue"
                                           Text="0.4"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Frequency:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="2" Grid.Column="1"
                                        x:Name="PixelShiftFrequencySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.2"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           x:Name="PixelShiftFrequencyValue"
                                           Text="0.2"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Max Distance:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="3" Grid.Column="1"
                                        x:Name="PixelShiftDistanceSlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="1" Maximum="20"
                                        Value="5"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           x:Name="PixelShiftDistanceValue"
                                           Text="5"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="Direction:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                                          x:Name="PixelShiftDirectionCombo"
                                          Background="#2A2A2A"
                                          Foreground="#00FF41"
                                          BorderBrush="#404040"
                                          Margin="10,5">
                                    <ComboBoxItem Content="Horizontal"/>
                                    <ComboBoxItem Content="Vertical"/>
                                    <ComboBoxItem Content="Both" IsSelected="True"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>

                        <!-- Color Inversion Effect -->
                        <GroupBox Header="COLOR INVERSION"
                                  Foreground="#FF4141"
                                  BorderBrush="#404040"
                                  Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                          x:Name="ColorInversionEnableCheckBox"
                                          Content="Enable Color Inversion"
                                          Foreground="#FF4141"
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Intensity:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="1" Grid.Column="1"
                                        x:Name="ColorInversionIntensitySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.3"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           x:Name="ColorInversionIntensityValue"
                                           Text="0.3"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Frequency:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="2" Grid.Column="1"
                                        x:Name="ColorInversionFrequencySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.1"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           x:Name="ColorInversionFrequencyValue"
                                           Text="0.1"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Duration:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="3" Grid.Column="1"
                                        x:Name="ColorInversionDurationSlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0.1" Maximum="2.0"
                                        Value="0.2"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           x:Name="ColorInversionDurationValue"
                                           Text="0.2s"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="Type:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                                          x:Name="ColorInversionTypeCombo"
                                          Background="#2A2A2A"
                                          Foreground="#FF4141"
                                          BorderBrush="#404040"
                                          Margin="10,5">
                                    <ComboBoxItem Content="Full Inversion"/>
                                    <ComboBoxItem Content="Channel Shift" IsSelected="True"/>
                                    <ComboBoxItem Content="Desaturation"/>
                                    <ComboBoxItem Content="Hue Shift"/>
                                </ComboBox>

                                <CheckBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                                          x:Name="ColorInversionFullScreenCheckBox"
                                          Content="Affect Full Screen"
                                          Foreground="#FF4141"
                                          Margin="0,10,0,0"/>
                            </Grid>
                        </GroupBox>

                        <!-- Scanline Effect -->
                        <GroupBox Header="SCANLINES"
                                  Foreground="#41FF41"
                                  BorderBrush="#404040"
                                  Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                          x:Name="ScanlineEnableCheckBox"
                                          Content="Enable Scanlines"
                                          Foreground="#41FF41"
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Intensity:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="1" Grid.Column="1"
                                        x:Name="ScanlineIntensitySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.2"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           x:Name="ScanlineIntensityValue"
                                           Text="0.2"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Frequency:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="2" Grid.Column="1"
                                        x:Name="ScanlineFrequencySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.8"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           x:Name="ScanlineFrequencyValue"
                                           Text="0.8"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Line Spacing:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="3" Grid.Column="1"
                                        x:Name="ScanlineSpacingSlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="2" Maximum="20"
                                        Value="4"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           x:Name="ScanlineSpacingValue"
                                           Text="4"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="Flicker Rate:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="4" Grid.Column="1"
                                        x:Name="ScanlineFlickerSlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.1"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="2"
                                           x:Name="ScanlineFlickerValue"
                                           Text="0.1"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="5" Grid.Column="0"
                                           Text="Pattern:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                                          x:Name="ScanlinePatternCombo"
                                          Background="#2A2A2A"
                                          Foreground="#41FF41"
                                          BorderBrush="#404040"
                                          Margin="10,5">
                                    <ComboBoxItem Content="Horizontal" IsSelected="True"/>
                                    <ComboBoxItem Content="Vertical"/>
                                    <ComboBoxItem Content="Grid"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>

                        <!-- Digital Breakdown Effect -->
                        <GroupBox Header="DIGITAL BREAKDOWN"
                                  Foreground="#FF41FF"
                                  BorderBrush="#404040"
                                  Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                          x:Name="BreakdownEnableCheckBox"
                                          Content="Enable Digital Breakdown"
                                          Foreground="#FF41FF"
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Intensity:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="1" Grid.Column="1"
                                        x:Name="BreakdownIntensitySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.6"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           x:Name="BreakdownIntensityValue"
                                           Text="0.6"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Frequency:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="2" Grid.Column="1"
                                        x:Name="BreakdownFrequencySlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0" Maximum="1"
                                        Value="0.05"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           x:Name="BreakdownFrequencyValue"
                                           Text="0.05"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Duration:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="3" Grid.Column="1"
                                        x:Name="BreakdownDurationSlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="0.1" Maximum="3.0"
                                        Value="0.5"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           x:Name="BreakdownDurationValue"
                                           Text="0.5s"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="Block Size:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <Slider Grid.Row="4" Grid.Column="1"
                                        x:Name="BreakdownBlockSizeSlider"
                                        Style="{StaticResource GlitchSliderStyle}"
                                        Minimum="2" Maximum="32"
                                        Value="8"
                                        Margin="10,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="2"
                                           x:Name="BreakdownBlockSizeValue"
                                           Text="8"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="5" Grid.Column="0"
                                           Text="Type:"
                                           Style="{StaticResource GlitchTextStyle}"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                                          x:Name="BreakdownTypeCombo"
                                          Background="#2A2A2A"
                                          Foreground="#FF41FF"
                                          BorderBrush="#404040"
                                          Margin="10,5">
                                    <ComboBoxItem Content="Static"/>
                                    <ComboBoxItem Content="Pixelation"/>
                                    <ComboBoxItem Content="Tearing"/>
                                    <ComboBoxItem Content="Mixed" IsSelected="True"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Live Preview Tab -->
            <TabItem Header="LIVE PREVIEW"
                     Foreground="#FFFF41"
                     FontFamily="Consolas">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="LIVE EFFECT PREVIEW"
                                   Style="{StaticResource GlitchTextStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="PreviewStatusText"
                                   Text="(Preview works independently of Master Enable)"
                                   Style="{StaticResource GlitchHighlightStyle}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="1"
                            BorderBrush="#404040"
                            BorderThickness="2"
                            Background="#1A1A1A"
                            Margin="0,0,0,15">
                        <Image x:Name="PreviewImage"
                               Stretch="Uniform"
                               Width="400"
                               Height="300"/>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="START PREVIEW"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="StartPreviewButton"
                                Margin="0,0,10,0"
                                Padding="15,8"/>
                        <Button Content="STOP PREVIEW"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="StopPreviewButton"
                                Margin="0,0,10,0"
                                Padding="15,8"/>
                        <Button Content="REFRESH"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="RefreshPreviewButton"
                                ToolTip="Force refresh preview button states"
                                Padding="10,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Presets Tab -->
            <TabItem Header="PRESETS"
                     Foreground="#00FF41"
                     FontFamily="Consolas">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="EFFECT PRESETS"
                                   Style="{StaticResource GlitchTextStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <Button Content="NEW PRESET"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="NewPresetButton"
                                Margin="20,0,0,0"
                                Padding="10,5"/>
                    </StackPanel>

                    <ListBox Grid.Row="1"
                             x:Name="PresetListBox"
                             Background="#2A2A2A"
                             Foreground="#00FF41"
                             BorderBrush="#404040"
                             Margin="0,0,0,15">
                        <ListBoxItem Content="Default Settings"/>
                        <ListBoxItem Content="Subtle Glitch"/>
                        <ListBoxItem Content="Heavy Corruption"/>
                        <ListBoxItem Content="Retro CRT"/>
                        <ListBoxItem Content="Digital Noise"/>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="LOAD"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="LoadPresetButton"
                                Margin="0,0,10,0"
                                Padding="15,8"/>
                        <Button Content="SAVE"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="SavePresetButton"
                                Margin="0,0,10,0"
                                Padding="15,8"/>
                        <Button Content="DELETE"
                                Style="{StaticResource GlitchButtonStyle}"
                                x:Name="DeletePresetButton"
                                Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Performance Tab -->
            <TabItem Header="PERFORMANCE"
                     Style="{StaticResource GlitchTabStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Performance Monitoring Section -->
                        <TextBlock Grid.Row="0"
                                   Text="PERFORMANCE MONITORING"
                                   Style="{StaticResource GlitchTextStyle}"
                                   FontSize="16"
                                   Margin="0,0,0,15"/>

                        <Grid Grid.Row="1" Margin="0,0,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
